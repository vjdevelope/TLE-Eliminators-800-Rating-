//if we found the configuration ... i.e. W.W then it is infinite source of water ,we can remove middle water cell and can fill other
#include <iostream>
using namespace std;
int main()
{
   int t;
   cin>>t;
   
   while(t--)
   {
       int n,count=0,flag=0;
       cin>>n;
       string s;
       cin>>s;
       
       for(int i=0;i<n;i++)
       {    
           if(s[i]=='.')count++;
           
           if(i>0 && i<n-1)
         {
           if(s[i]=='.' && s[i-1]=='.' && s[i+1]=='.')
           {
               cout<<2<<endl;
               flag=1;
           }
         }
       }
       if(flag==0)
       {
           cout<<count<<endl;
       }
   }
    return 0;
}
